<div class='container'>
  <div>
    <h1>Contact Page</h1>
  </div>
  <form action='/contact' method='POST'>
    <div>
      <label>Name</label>
      <input type='text' class='span8' name='name' placeholder='e.g.John Smith' />
    </div>
    <div>
      <label>E-mail</label>
      <input type='email' class='span8' name='email' placeholder='e.g.john@smith.com' />
    </div>
    <div>
      <label>Subject</label>
      <input type='text' class='span8' name='subject' placeholder='Subject' />
    </div>
    <div>
      <label>Message</label>
      <textarea name='message' class='span8' rows='15'></textarea>
    </div>
    <div>
      <input type='submit' class='btn btn-info' value='Send' />
    </div>
  </form>
</div>
